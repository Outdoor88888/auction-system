<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Submit</servlet-name>
        <servlet-class>SubmitServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ItemList</servlet-name>
        <servlet-class>ItemListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ItemDetail</servlet-name>
        <servlet-class>ItemDetailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserDetail</servlet-name>
        <servlet-class>UserDetailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Sell</servlet-name>
        <servlet-class>SellServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BanList</servlet-name>
        <servlet-class>BanListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Submit</servlet-name>
        <url-pattern>/submit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ItemList</servlet-name>
        <url-pattern>/itemList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ItemDetail</servlet-name>
        <url-pattern>/itemDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserDetail</servlet-name>
        <url-pattern>/userDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Sell</servlet-name>
        <url-pattern>/sell</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BanList</servlet-name>
        <url-pattern>/banList</url-pattern>
    </servlet-mapping>
</web-app>